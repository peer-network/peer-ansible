<VirtualHost *:443>
    ServerName frontend.peerapp.eu
    DocumentRoot /var/www/html

    SSLEngine on
    SSLProtocol all -SSLv2 -SSLv3
    SSLCipherSuite HIGH:!aNULL:!MD5
    SSLCertificateFile /etc/letsencrypt/live/frontend.peerapp.eu/fullchain.pem
    SSLCertificateKeyFile /etc/letsencrypt/live/frontend.peerapp.eu/privkey.pem

    <FilesMatch "\.(cgi|shtml|phtml|php)$">
        SSLOptions +StdEnvVars
    </FilesMatch>

    <Directory /usr/lib/cgi-bin>
        SSLOptions +StdEnvVars
        AllowOverride All
        Require all granted
    </Directory>
    <Directory /var/www/html>
    	AllowOverride All
    	Require all granted
    </Directory>
</VirtualHost>

<VirtualHost *:80>
    ServerName frontend.peerapp.eu
    
    # Redirect all HTTP requests to HTTPS domain
    Redirect permanent / https://frontend.peerapp.eu/
</VirtualHost>
